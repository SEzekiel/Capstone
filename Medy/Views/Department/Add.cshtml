@model Medy.Models.department
@{
    /**/

    Layout = null; }

@using (Html.BeginForm("Add", "Department", FormMethod.Post, new { onsubmit = "return submitForm(this)" }))
{
    @Html.HiddenFor(Model => Model.departmentID)

    <div class="form-group" style="width:100%">
        @Html.LabelFor(Model => Model.departmentName, new { @class = "control-label" })
        @Html.EditorFor(model => model.departmentName, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
    </div>

    <div class="form-group" style="width:100%">
        @Html.LabelFor(Model=>Model.departmentHead, new { @class = "control-label" })
        @Html.EditorFor(model => model.departmentHead, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="submit" value="Reset" class="btn btn-warning" />

    </div>
}

